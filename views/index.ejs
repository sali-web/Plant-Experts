</div> 

<!--categories End-->

<!--Indoor Plants-->

<section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
      <h2>Indoor Plants</h2>
      <a href="/explore-Indoor" class="ms-auto"></a>
    </div>

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
      <% if(indoor!== '') { %>
        <% indoor.forEach(function(caretips, index){ %>
        <a href="/CareTips/<%=caretips._id %>" class="col text-center category__link">
          <div class="category__img category__img--large shadow">
            <img src="img/<%=caretips.image%>" alt="<%= caretips.name %>" loading="lazy">
          </div>
          <div class="pt-1"><%=caretips.name%></div>
        </a>
        <% }) %>
      <% } else { %>
        <p>No items found.</p>
      <% } %>

    </div>

</section>
<!--Indoor ends-->


