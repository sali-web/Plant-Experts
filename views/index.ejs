<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6">
      <img src="/img/contact.jpg" width="800px" height="800px" class="d-block mx-lg-auto img-fluid" loading="lazy" alt="PlantExpert">
    </div>
  
    <div class="col-12 col-lg-6">
      <h1 class="display-6 fw-bold mb-3">Be a confident Plant Parent</h1>
      <p class="lead">
        Gain confidence with taking care of plants through simple plant care tips
      </p>
  
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a href="/Buynow" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Buy plant guides now</a>
        <a href="/viewall" class="btn btn-outline-secondary btn-lg px-4 me-md-2">View all plant guides</a>
      </div>
  
    </div>
  
  </div>


<!--categories start-->

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  <% if(categoriesList != '') { %>
    <% categoriesList.forEach(function(category, index) { %>
      <a href="/categoriesList/<%= category.name %>" class="col text-center category__link">
        <div class="category__img shadow">
          <img src="img/<%= category.image%>" alt="<%= category.name %>" loading="lazy">
        </div>
        <div class="pt-1"><%= category.name %></div>
      </a>
    <% }) %>
  <% } %>

